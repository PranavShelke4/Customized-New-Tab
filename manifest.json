{
    "manifest_version": 3,
    "name": "Custom New Tab",
    "description": "A custom new tab extension that shows time, greeting, and more.",
    "version": "1.0",
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "chrome_url_overrides": {
      "newtab": "index.html"
    },
    "permissions": [
      "storage"
    ]
  }
  